<h2>Edit Figure</h2>
<form action="/figures/<%= @figure.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  Name: <%= @figure.name %> <input type="text" name="figure[name]" id="figure_name"><br>
  Titles: <br>
    <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title)%>><%= title.name %>
    <br>
    <% end %>
    Create New Title: <input type="text" name="title[name]" id="new_title"><br>
  Landmarks: <br>
    <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark)%>><%= landmark.name %>
    <br>
    <% end %>
    Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark"><br>
  <input type="submit" value="Edit Figure">
</form>
