<h2>Create A New Figure</h2>
<form action="/figures" method="POST">
  Name: <input type="text" name="figure[name]" id="figure_name"><br>

  Titles: <br>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
  <% end %>
  <br>
  Create New Title: <input type="text" name="title[name]" id="new_title"><br>

  Landmarks: <br>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
  <% end %>
  <br>
  Create New Landmark: <input type="text" name="landmark[name]" id="new_landmark"><br>
  <input type="submit" value="Create New Figure">
</form>
